extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
     main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2016/11/29/07/22/bible-1868070_960_720.jpg", alt="Book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so meny even more things.
                        .card__action
                            button.btn Add to Cart
        else
            h1 No products 